        "requestBody": {
          "$ref": "#/components/requestBodies/AccessRoleCreate"
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessRole"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "AccessRoles"
        ],
        "summary": "Delete one access role",
        "parameters": [
          {
            "$ref": "#/components/parameters/ID"
