{
  "info": {
    "version": "1.0.0",
    "title": "Ecclesiast API",
    "description": "This Api for Ecclesiast projects",
    "contact": {
      "name": "Alex Dolid",
      "email": "admin@admin.com",
      "url": "web.com"
    }
  },
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "http://localhost:3030",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "JWT": {
        "name": "Authorization",
        "description": "This is JWT bearer token API",
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AccessRole": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "example": {
          "_id": "hash",
          "name": "admin"
        }
      },
      "AuthSignIn": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "example": {
          "email": "admin@admin.com",
          "password": "password"
        }
      },
      "Bibles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            },
            "author": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "translators": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "edition": {
              "type": "string"
            },
            "src": {
              "type": "string"
            }
          }
        }
      },
      "Locale": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "code2": {
            "type": "string"
          },
          "code3": {
            "type": "string"
          }
        },
        "example": {
          "name": "English",
          "code2": "en",
          "code3": "eng"
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "total": {
            "type": "number"
          },
          "page": {
            "type": "number"
          },
          "size": {
            "type": "number"
          }
        },
        "example": {
          "total": 100,
          "page": 1,
          "size": 10
        }
      },
      "ID": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          }
        },
        "example": {
          "_id": "hash"
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "nickname": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "accessRole": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "example": {
          "_id": "hash",
          "nickname": "admin",
          "email": "admin@admin.com",
          "accessRole": "admin",
          "password": "password"
        }
      }
    },
    "requestBodies": {
      "AccessRoleCreate": {
        "description": "Create new access role body",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "example": {
                "name": "admin"
              }
            }
          }
        }
      },
      "AuthSignIn": {
        "description": "Required Body for sign in and sign up to app",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/AuthSignIn"
            }
          }
        }
      },
      "LocaleCreate": {
        "description": "Create new locale body",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Locale"
            }
          }
        }
      },
      "UserCreate": {
        "description": "Create new user body",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      }
    },
    "parameters": {
      "ID": {
        "name": "_id",
        "in": "path",
        "description": "id of user",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    }
  },
  "security": [
    {
      "JWT": []
    }
  ],
  "paths": {
