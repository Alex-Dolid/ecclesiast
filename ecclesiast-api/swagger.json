{
  "info": {
    "version": "1.0.0",
    "title": "Ecclesiast API",
    "description": "ecclesiast-api"
  },
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "http://localhost:3030"
    }
  ],
  "paths": {
    "/bibles": {
      "get": {
        "tags": [
          "Bibles"
        ],
        "summary": "Get all bibles",
        "responses": {
          "200": {
            "description": "Get all bibles data success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Bibles"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get list of all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/${_id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get one user by id",
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "description": "id of user",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bibles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            },
            "author": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "translators": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "edition": {
              "type": "string"
            },
            "src": {
              "type": "string"
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "example": {
          "_id": "dfkn32h4vjh2v42",
          "email": "admin@admin.com"
        }
      }
    }
  },
  "tags": []
}