{
  "extends": "./tsconfig.json",
  "include": [
    // ...
    "babel.config.js",
    "vue.config.js",
    "jest.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
  ],
  "parser": "@typescript-eslint/parser",
  "ecmaFeatures": {
    "jsx": true,
  },
  "ecmaVersion": 2018,
  "sourceType": "module"
}